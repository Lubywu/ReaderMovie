.post-container{
    display:flex;
    flex-direction:column;
    margin-top:20rpx;
    margin-bottom:40rpx;
    background-color:#fff;
    border-bottom:1px solid #ededed;
    /*border-top:1px solid #ededed;*/
    padding-bottom:20rpx;
}
.post-author{
    margin: 10rpx 0 20rpx 10rpx;
}
.post-author-pic{
    width: 60rpx;
    height: 60rpx;
    vertical-align: middle;
}
.post-date{
    font-size: 26rpx;
    margin-left: 20rpx;
    vertical-align: middle;
}
.post-title{
    font-size: 30rpx;
    font-weight: 600;
    color: #333;
    margin-bottom: 20rpx;
    margin-left: 20rpx;
}
.post-image{
    display: inline-block;
    width: 100%;
    height: 400rpx;
    margin-bottom: 20rpx;
    margin-left: 16rpx;
    margin: auto 0;
}
.post-content{
    color:#666;
    font-size:28rpx;
    margin-bottom: 20rpx;
    margin-top: 20rpx;
    padding-left: 20rpx;
    letter-spacing:2rpx;
    line-height: 40rpx;

}
.post-like{
    flex-direction: row;
    font-size: 13px;
    line-height: 16px;
    margin-left: 20rpx;
}
.post-like-image{
    height:16px;
    width:16px;
    margin-right: 8px;
    vertical-align: middle;
}
.post-like-count{
    margin-right: 20rpx;
    vertical-align: middle;
    
}