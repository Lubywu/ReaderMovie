@import 'movie-list/movie-list-template.wxss';
@import 'movie-grid/movie-grid-template.wxss';

.container{
    background-color: #f2f2f3;
}
.movies-template{
    margin-bottom: 20rpx;
}
.search {
  background-color: #f2f2f2;
  height: 80rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
}
.search-img {
  margin: auto 0 auto 20rpx;
}
.search input {
  height: 100%;
  width: 590rpx;
  margin-left: 20px;
  font-size: 28rpx;
}
.placeholder {
  font-size: 12px;
  color: #d1d1d1;
  margin-left: 20rpx;
}
.cancel-search{
    margin: auto 10rpx auto 10rpx;
    color: #666;
    font-size: 24rpx;
}
